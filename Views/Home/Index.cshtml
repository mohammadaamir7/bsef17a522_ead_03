@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <title>@ViewBag.Title - My ASP.NET Application</title>


</head>
<body>

  

    <section style="border-bottom: 3px solid #808080">
        <div class="container-fluid">

            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Content/gsk.jpg" alt="gsk">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/getz.jpg" alt="getz">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/sami.png" alt="sami">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/hilton..jpg" alt="hilton">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/ferozsons.png" alt="ferozsons">
                    </div>
                </div>

            </div>
        </div>

    </section>
    <br><br><br>
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md">
                    <h1 class="hd_style">What we offer</h1>
                    <br><br>
                </div>

                <div class="row">
                    <div class="col-md-4" style="border-right: 0.7px solid grey;">
                        <br><br>
                        <img src="~/Content/p1.jpg" class="img-fluid" style="width:100%;height:auto;">
                        <br><br>

                    </div>

                    <div class="col-md-8">
                        <br><br><br>
                        <p class="p_style">This platform is for the cure purpose.We offer differnt kinds of medicine here,our main purpose is to help people find the best suitable medicine so that they dont have to suffer or face time waste.We have contracts with different companies and all there medicines are available on our website, you can easily search medicines with company name and can find the best cure for yourself.</p>
                        <br><br>
                    </div>

                </div>
            </div>
        </div>

    </section>
    <br><br><br>
    <div style="border-bottom:1px solid #6d6d6d"></div>
    <br /><br /><br />
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md">
                    <div class="div_style mx-auto">
                        <form>
                            <div class="form-group">
                                <br /><br />
                                <label class="lb_style" for="sel1">Select list (select one):</label>
                                <select class="form-control" id="sel" style="margin-left:20px;" onchange="this.options[this.selectedIndex].value && (window.location = this.options[this.selectedIndex].value);">
                                    <option value="">Choose a company</option>
                                    <option value="/Home/gsk">GSK</option>
                                    <option value="/Home/getz">GETHZ</option>
                                    <option value="/Home/sami_pharma">Sami Pharma</option>
                                    <option value="/Home/hilton">Hilton Pharma</option>
                                    <option value="/Home/ferozsons">Ferozsons</option>
                                </select>



                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <br /><br />
</body>
</html>